// Ensure Map button appears inside SugarCube menu
// Inject Map button into the UI bar body
$(document).on(':passagerender', function () {
    const uiBarBody = document.querySelector("#ui-bar-body");
    if (!uiBarBody) return;

    // Avoid duplicates
    if (document.getElementById("map-button")) return;

    // Create Map button
    const mapBtn = document.createElement("button");
    mapBtn.id = "map-button";
    mapBtn.textContent = "Map";
    mapBtn.className = "ui-button";   // uses the same styling as built-in UI buttons
    mapBtn.onclick = openMap;

    // Insert before Restart link
    const restartLink = Array.from(uiBarBody.children).find(el => el.textContent.includes("Restart"));
    if (restartLink) {
        uiBarBody.insertBefore(mapBtn, restartLink);
    } else {
        uiBarBody.appendChild(mapBtn);
    }
});
