    ["explored_livingroom", 0], // 0 false, 1 true
    ["explored_kitchen", 0],
    ["explored_entryway", 0],
    ["explored_parents_room", 0],
    ["explored_doves_room", 0],
    ["explored_room", 0],
    ["explored_winona_room", 0],
    ["explored_bathroom", 0],
    ["explored_basement", 0],
    // ch5
